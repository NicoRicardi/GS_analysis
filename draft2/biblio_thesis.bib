@Article{Church2021,
author = {Church, Jonathan R. and Olsen, Jógvan Magnus Haugaard and Schapiro, Igor},
title = {{The Impact of Retinal Configuration on the Protein--Chromophore Interactions in Bistable Jumping Spider Rhodopsin-1}},
journal = {Molecules},
volume = {27},
year = {2022},
number = {1},
